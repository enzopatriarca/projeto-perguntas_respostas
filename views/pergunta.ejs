<%- include ('partials/header.ejs'); %>

<body>
    <%- include ('partials/navbar.ejs'); %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/salvar/resposta">
           <div class="card">
                <label for="">Resposta</label>
                <hr>
                <textarea placeholder="Digite uma resposta" class="form-control" name="corpo" id="" cols="30" rows="10" required></textarea>
                <input type="hidden" name="perguntaID" id="" value="<%= pergunta.id %>">
           </div>
           <div class="card-footer">
                <button type="submit" class="btn btn-primary">Responder</button>
           </div>
        </form>
        <hr>
        <h3>Respostas: </h3>
        <hr>
        <% respostas.forEach(resposta =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <%})%>
    </div>
</body>
<%- include ('partials/footer.ejs'); %>