<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>
    <div class="container">
        <hr>
        <h1>Lista de perguntas: </h1>
        <hr>
        <a class="btn btn-primary" href="/perguntar">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta =>{ %>
            <br>
            <div class="card">
                <h3> <%= pergunta.titulo %> </h3>
                <!-- <p> <%= pergunta.descricao %> </p> -->
            </div>
            <div class="card-footer">
                <a style="text-decoration: none;" href="/pergunta/<%=pergunta.id%>"><button class="btn btn-primary">Responder</button></a>
            </div>
            
        <%})%>
    </div>

    
</body>
<%- include ('partials/footer.ejs'); %>